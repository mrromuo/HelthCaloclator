<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Layoutscomens">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">@dimen/layoutmargins</item>
    </style>
    <style name="TextofTextView">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextforRsults">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/RsultText</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextoftitalsText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?android:attr/windowTitleSize</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="comunTextsViews">
        <item name="android:layout_width">336dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_marginTop">35dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="sotialText">
        <item name="android:layout_width">336dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:textColor">#040EFF</item>
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LogoView">
        <item name="android:layout_width">130dp</item>
        <item name="android:layout_height">131dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:src">@drawable/darklogo</item>
    </style>

    <style name="comunButtons">
        <item name="android:layout_width">336dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_marginTop">34dp</item>
        <item name="android:background">@drawable/custom_buttom</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TostTextView">
        <item name="android:textColor">#191919</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textColorHint">#5B5252</item>
        <item name="android:textStyle">bold</item>
        <item name="android:inputType">numberDecimal</item>
    </style>


</resources>